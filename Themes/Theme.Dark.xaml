<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Base brushes -->
  <SolidColorBrush x:Key="WindowBackgroundBrush"
                   Color="#171717"/>
  <SolidColorBrush x:Key="PrimaryTextBrush"
                   Color="#FFFFFF"/>
  <SolidColorBrush x:Key="MutedTextBrush"
                   Color="#B3B3B3"/>

  <!-- Cards & borders -->
  <SolidColorBrush x:Key="CardBackgroundBrush"
                   Color="#1F1F1F"/>
  <SolidColorBrush x:Key="CardBorderBrush"
                   Color="#2A2A2A"/>

  <!-- Sub-cards (lists) -->
  <SolidColorBrush x:Key="SubCardLeftBrush"
                   Color="#263043"/>
  <!-- subtle bluish -->
  <SolidColorBrush x:Key="SubCardRightBrush"
                   Color="#33283D"/>
  <!-- subtle purple -->
  <SolidColorBrush x:Key="HeaderRowBackgroundBrush"
                   Color="#2A2A2A"/>
  <SolidColorBrush x:Key="TaskItemBackgroundBrush"
                   Color="#222225"/>

  <!-- Interactions -->
  <SolidColorBrush x:Key="HoverBrush"
                   Color="#2A2A2A"/>
  <SolidColorBrush x:Key="PressedBrush"
                   Color="#242424"/>

  <!-- Overlay -->
  <SolidColorBrush x:Key="OverlayPanelBrush"
                   Color="#222222"/>


  <!--input surfaces slightly lighter than #171717 -->
  <SolidColorBrush x:Key="ControlBackgroundBrush"
                   Color="#2C2C2C"/>
  <SolidColorBrush x:Key="ControlBorderBrush"
                   Color="#3A3A3A"/>

</ResourceDictionary>